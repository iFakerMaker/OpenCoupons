
{
  "manifest_version": 3,
  "name": "OpenCoupon",
  "version": "1.0.0",
  "description": "Open-source community driven coupon finder.",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "https://img.icons8.com/fluency/16/shopping-tag.png",
      "48": "https://img.icons8.com/fluency/48/shopping-tag.png",
      "128": "https://img.icons8.com/fluency/128/shopping-tag.png"
    }
  },
  "permissions": ["storage", "activeTab", "tabs"]
}
